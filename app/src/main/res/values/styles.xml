<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="icon_color">@color/black</item>
        <item name="secondary_bg_color">@color/light</item>
        <item name="theme_icon">@drawable/ic_invert_theme</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/inverted</item>
        <item name="android:statusBarColor">?attr/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleLight</item>
        <item name="android:colorEdgeEffect">?attr/accent_color</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- LIGHT THEME -->


    <!-- INVERTED THEME -->
    <style name="AppThemeInverted" parent="android:Theme.Material.NoActionBar">
        <item name="icon_color">@color/white</item>
        <item name="secondary_bg_color">@color/inverted</item>
        <item name="theme_icon">@drawable/ic_invert_theme_off</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/inverted</item>
        <item name="android:statusBarColor">?attr/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleInverted</item>
        <item name="android:colorEdgeEffect">?attr/accent_color</item>
    </style>

    <style name="AlertDialogStyleLight" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">?attr/accent_color</item>
        <item name="android:background">@color/light</item>
    </style>

    <style name="AlertDialogStyleInverted" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorAccent">?attr/accent_color</item>
        <item name="android:background">@color/inverted</item>
    </style>

    <style name="SeekBarStyle" parent="android:Widget.Material.SeekBar">
        <item name="android:progressBackgroundTint">?attr/accent_color</item>
        <item name="android:progressTint">?attr/accent_color</item>
        <item name="android:colorControlActivated">?attr/accent_color</item>
        <item name="android:thumbTint">?attr/accent_color</item>
    </style>

</resources>
