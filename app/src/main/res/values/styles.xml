<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="icon_color">@color/black</item>
        <item name="secondary_bg_color">@color/light</item>
        <item name="theme_icon">@drawable/ic_invert_theme</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/inverted</item>
        <item name="android:statusBarColor">?attr/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleLight</item>
        <item name="android:colorEdgeEffect">?attr/accent_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- LIGHT THEME -->


    <!-- INVERTED THEME -->
<style name="tabText" >
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">18sp</item>
</style>
    <style name="AlertDialogStyleLight" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">?attr/accent_color</item>
        <item name="android:background">@color/light</item>
    </style>

</resources>
